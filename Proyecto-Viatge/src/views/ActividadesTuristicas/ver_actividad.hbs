        <div class="titulo-container"><h3>{{actividad.Nombre_Actividad}}</h3></div>
        <div class="actividad-favorito">
            <form action="/cambioFavorito/{{actividad.ID_ActividadTuristica}}" method="POST" class="actividad-favorito">
            <button type="submit" style="background: none; border: none; cursor: pointer;">
                Me interesa
                {{#if actividad.EsFavorito}}
                    <img src="/img/favoritoTrue.png" alt="Favorito activado">
                {{else}}
                    <img src="/img/favoritoFalse.png" alt="Favorito desactivado">
                {{/if}}
            </button>
        </form>
        </div>
        <div class="mini-descripcion"><h4>{{actividad.Descripcion_Mini}}</h4></div>
