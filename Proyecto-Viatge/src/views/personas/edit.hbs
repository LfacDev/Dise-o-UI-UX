                                <option value='1'>Administrativo</option>
                                <option value='2'>Docente</option>
                                <option value='3'>Estudiante</option>
                            </select> --}}
                        <select id="tipoPersona" class="form-select" name="FK_tipopersona">

                            {{#each Hoteles}}
                                <option value="{{this.ID_Pais}}">
                                    {{this.Nombre_Pais}}
                                </option>
                            {{/each}}
                        </select>
                         {{#each Hoteles}}
                        <a href="#" data-value="{{this.ID_Pais}}">{{this.Nombre_Pais}}</a>
                        {{/each}}
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
